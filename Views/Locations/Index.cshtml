@model IEnumerable<ClinicManagementSystem.Models.Location>

@{
    ViewData["Title"] = "My Locations";
}

<div class="row mb-3">
    <div class="col-md-12">
        <h2><i class="fas fa-map-marker-alt"></i> My Locations</h2>
        <p class="text-muted">Manage your clinic locations and branches</p>
        <hr />
    </div>
</div>

<div class="row mb-3">
    <div class="col-md-12">
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus"></i> Add New Location
        </a>
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to Dashboard
        </a>
    </div>
</div>

<div class="card">
    <div class="card-body">
        @if (!Model.Any())
        {
            <div class="alert alert-info">
                <i class="fas fa-info-circle"></i> You haven't added any locations yet. Click "Add New Location" to get started.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-primary">
                        <tr>
                            <th>م</th>
                            <th>@Html.DisplayNameFor(model => model.LocationName)</th>
                            <th>@Html.DisplayNameFor(model => model.Address)</th>
                            <th>@Html.DisplayNameFor(model => model.Phone)</th>
                            <th>@Html.DisplayNameFor(model => model.Active)</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int counter = 1;
                        }
                        @foreach (var item in Model)
                        {
                            <tr class="@(!item.Active ? "table-secondary" : "")">
                                <td>@counter</td>
                                <td>
                                    <i class="fas fa-map-marker-alt text-danger"></i>
                                    <strong>@item.LocationName</strong>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.Address))
                                    {
                                        <small class="text-muted">
                                            <i class="fas fa-map"></i> @item.Address
                                        </small>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.Phone))
                                    {
                                        <i class="fas fa-phone"></i> 
                                        @item.Phone
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (item.Active)
                                    {
                                        <span class="badge bg-success">
                                            <i class="fas fa-check"></i> Active
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">
                                            <i class="fas fa-times"></i> Inactive
                                        </span>
                                    }
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning" title="Edit">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Delete">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                            counter++;
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
