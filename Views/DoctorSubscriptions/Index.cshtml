@model IEnumerable<ClinicManagementSystem.Models.DoctorSubscription>

@{
    ViewData["Title"] = "Doctor Subscriptions";
    var doctorId = ViewBag.DoctorId;
    var doctorName = ViewBag.DoctorName;
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <div class="d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">
                        <i class="fas fa-calendar-check"></i> Subscriptions for Dr. @doctorName
                    </h4>
                    <a asp-action="Create" asp-route-doctorId="@doctorId" class="btn btn-light btn-sm">
                        <i class="fas fa-plus"></i> Add New Subscription
                    </a>
                </div>
            </div>
            <div class="card-body">
                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="fas fa-check-circle"></i> @TempData["Success"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                @if (Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Subscription Type</th>
                                    <th>Start Date</th>
                                    <th>End Date</th>
                                    <th>Duration</th>
                                    <th>Status</th>
                                    <th>Remaining Days</th>
                                    <th>Notes</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    var today = DateTime.Today;
                                    var isCurrentlyValid = item.IsActive && item.StartDate <= today && item.EndDate >= today;
                                    var rowClass = isCurrentlyValid ? "table-success" : (item.IsExpired ? "table-danger" : "");

                                    <tr class="@rowClass">
                                        <td>
                                            @if (!string.IsNullOrEmpty(item.SubscriptionType))
                                            {
                                                <span class="badge bg-info">@item.SubscriptionType</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td>@item.StartDate.ToString("yyyy-MM-dd")</td>
                                        <td>@item.EndDate.ToString("yyyy-MM-dd")</td>
                                        <td>
                                            @{
                                                var duration = (item.EndDate - item.StartDate).Days;
                                                var months = duration / 30;
                                            }
                                            @if (months > 0)
                                            {
                                                <span>@months month(s)</span>
                                            }
                                            else
                                            {
                                                <span>@duration day(s)</span>
                                            }
                                        </td>
                                        <td>
                                            @if (isCurrentlyValid)
                                            {
                                                <span class="badge bg-success">
                                                    <i class="fas fa-check-circle"></i> Active
                                                </span>
                                            }
                                            else if (item.IsExpired)
                                            {
                                                <span class="badge bg-danger">
                                                    <i class="fas fa-times-circle"></i> Expired
                                                </span>
                                            }
                                            else if (!item.IsActive)
                                            {
                                                <span class="badge bg-secondary">
                                                    <i class="fas fa-ban"></i> Inactive
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-warning">
                                                    <i class="fas fa-clock"></i> Pending
                                                </span>
                                            }
                                        </td>
                                        <td>
                                            @if (item.IsExpired)
                                            {
                                                <span class="text-danger">0 days</span>
                                            }
                                            else if (isCurrentlyValid)
                                            {
                                                var remainingDays = (item.EndDate - today).Days;
                                                if (remainingDays <= 7)
                                                {
                                                    <span class="text-warning fw-bold">
                                                        <i class="fas fa-exclamation-triangle"></i> @remainingDays days
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="text-success">@remainingDays days</span>
                                                }
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(item.Notes))
                                            {
                                                if (item.Notes.Length > 30)
                                                {
                                                    <span title="@item.Notes">@item.Notes.Substring(0, 30)...</span>
                                                }
                                                else
                                                {
                                                    @item.Notes
                                                }
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a asp-action="Edit" asp-route-id="@item.Id"
                                                   class="btn btn-sm btn-warning" title="Edit">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@item.Id"
                                                   class="btn btn-sm btn-danger" title="Delete">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i> No subscriptions found for this doctor.
                        <a asp-action="Create" asp-route-doctorId="@doctorId" class="alert-link">Add the first subscription</a>
                    </div>
                }

                <div class="mt-3">
                    <a asp-controller="DoctorInfos" asp-action="Details" asp-route-id="@doctorId" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to Doctor Details
                    </a>
                    <a asp-controller="DoctorInfos" asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-list"></i> All Doctors
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
