@model ClinicManagementSystem.Models.DoctorInfo

@{
    ViewData["Title"] = "Create Doctor";
}

<div class="row">
    <div class="col-md-12">
        <h2><i class="fas fa-user-md"></i> Create New Doctor</h2>
        <hr />
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            
            <div class="card mb-3">
                <div class="card-header bg-primary text-white">
                    <i class="fas fa-info-circle"></i> Basic Information
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="DoctorName" class="form-label"></label>
                            <input asp-for="DoctorName" class="form-control" />
                            <span asp-validation-for="DoctorName" class="text-danger"></span>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label asp-for="DoctorTitle" class="form-label"></label>
                            <input asp-for="DoctorTitle" class="form-control" />
                            <span asp-validation-for="DoctorTitle" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="DoctorCivilId" class="form-label"></label>
                            <input asp-for="DoctorCivilId" class="form-control" />
                            <span asp-validation-for="DoctorCivilId" class="text-danger"></span>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label asp-for="Gender" class="form-label"></label>
                            <select asp-for="Gender" class="form-select">
                                <option value="">-- Select --</option>
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>
                            </select>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="SpecialistId" class="form-label"></label>
                            <select asp-for="SpecialistId" class="form-select" asp-items="ViewBag.SpecialistId">
                                <option value="">-- Select Specialist --</option>
                            </select>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label asp-for="UserId" class="form-label"></label>
                            <select asp-for="UserId" class="form-select" asp-items="ViewBag.UserId">
                                <option value="">-- Select User --</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card mb-3">
                <div class="card-header bg-info text-white">
                    <i class="fas fa-phone"></i> Contact Information
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="DoctorTel1" class="form-label"></label>
                            <input asp-for="DoctorTel1" class="form-control" />
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label asp-for="DoctorTel2" class="form-label"></label>
                            <input asp-for="DoctorTel2" class="form-control" />
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="DoctorAddress" class="form-label"></label>
                        <textarea asp-for="DoctorAddress" class="form-control" rows="2"></textarea>
                    </div>
                </div>
            </div>

            <div class="card mb-3">
                <div class="card-header bg-success text-white">
                    <i class="fas fa-key"></i> Login Credentials (Optional)
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i> Fill these fields if you want to enable login for this doctor
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="LoginUsername" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                                <input asp-for="LoginUsername" class="form-control" placeholder="e.g., dr.smith" />
                            </div>
                            <span asp-validation-for="LoginUsername" class="text-danger"></span>
                            <small class="text-muted">Unique username for login</small>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label asp-for="LoginPassword" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                <input asp-for="LoginPassword" type="password" class="form-control" placeholder="Enter password" />
                            </div>
                            <span asp-validation-for="LoginPassword" class="text-danger"></span>
                            <small class="text-muted">Minimum 6 characters</small>
                        </div>
                    </div>

                    <div class="form-check mb-3">
                        <input asp-for="CanLogin" class="form-check-input" type="checkbox" />
                        <label asp-for="CanLogin" class="form-check-label"></label>
                    </div>
                </div>
            </div>

            <div class="card mb-3">
                <div class="card-header bg-secondary text-white">
                    <i class="fas fa-image"></i> Photo & Details
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label for="DoctorPictureFile" class="form-label">Doctor Picture</label>
                        <input type="file" class="form-control" id="DoctorPictureFile" name="DoctorPictureFile" accept="image/*" />
                        <small class="text-muted">JPG, PNG, GIF - Max 2MB</small>
                    </div>

                    <div class="mb-3">
                        <label asp-for="DoctorDetails" class="form-label"></label>
                        <textarea asp-for="DoctorDetails" class="form-control" rows="3"></textarea>
                    </div>

                    <div class="form-check">
                        <input asp-for="Active" class="form-check-input" type="checkbox" checked />
                        <label asp-for="Active" class="form-check-label"></label>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-save"></i> Save Doctor
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
