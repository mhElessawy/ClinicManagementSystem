@model ClinicManagementSystem.Models.DoctorInfo

@{
    ViewData["Title"] = "Update Doctor Information";
}

<div class="row">
    <div class="col-md-10 offset-md-1">
        <div class="card">
            <div class="card-header bg-warning text-white">
                <h4 class="mb-0"><i class="fas fa-edit"></i> @ViewData["Title"]</h4>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="RegDate" />
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="DoctorName" class="form-label"></label>
                                <input asp-for="DoctorName" class="form-control" />
                                <span asp-validation-for="DoctorName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="DoctorTitle" class="form-label"></label>
                                <input asp-for="DoctorTitle" class="form-control" />
                                <span asp-validation-for="DoctorTitle" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="DoctorCivilId" class="form-label"></label>
                                <input asp-for="DoctorCivilId" class="form-control" />
                                <span asp-validation-for="DoctorCivilId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Gender" class="form-label"></label>
                                <select asp-for="Gender" class="form-control">
                                    <option value="">-- Gender --</option>
                                    <option value="Male">Male</option>
                                    <option value="Female">Female</option>
                                </select>
                                <span asp-validation-for="Gender" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="DoctorTel1" class="form-label"></label>
                                <input asp-for="DoctorTel1" class="form-control" />
                                <span asp-validation-for="DoctorTel1" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="DoctorTel2" class="form-label"></label>
                                <input asp-for="DoctorTel2" class="form-control" />
                                <span asp-validation-for="DoctorTel2" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="DoctorAddress" class="form-label"></label>
                        <textarea asp-for="DoctorAddress" class="form-control" rows="2"></textarea>
                        <span asp-validation-for="DoctorAddress" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="SpecialistId" class="form-label"></label>
                                <select asp-for="SpecialistId" asp-items="ViewBag.SpecialistId" class="form-control">
                                    <option value="">-- Select Specialist --</option>
                                </select>
                                <span asp-validation-for="SpecialistId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="UserId" class="form-label"></label>
                                <select asp-for="UserId" asp-items="ViewBag.UserId" class="form-control">
                                    <option value="">-- Select User --</option>
                                </select>
                                <span asp-validation-for="UserId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="DoctorDetails" class="form-label"></label>
                        <textarea asp-for="DoctorDetails" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="DoctorDetails" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Change Doctor Photo</label>
                                <input type="file" name="DoctorPictureFile" class="form-control" accept="image/*" />
                                <small class="text-muted">اترك فارغاً للإبقاء على الصورة الحالية</small>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Active" class="form-label"></label>
                                <div class="form-check form-switch">
                                    <input asp-for="Active" class="form-check-input" type="checkbox" />
                                    <label class="form-check-label" asp-for="Active"></label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="mt-4">
                        <button type="submit" class="btn btn-warning">
                            <i class="fas fa-save"></i> Save 
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Return to list
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
