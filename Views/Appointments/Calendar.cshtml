@model IEnumerable<ClinicManagementSystem.Models.Appointment>

@{
    ViewData["Title"] = "Calendar View";
    var groupedByDate = Model.GroupBy(a => a.AppointmentDate.Date).OrderBy(g => g.Key);
}

<div class="row mb-3">
    <div class="col-md-12">
        <h2><i class="fas fa-calendar"></i> Appointments Calendar</h2>
        <p class="text-muted">View all scheduled appointments by date</p>
        <hr />
    </div>
</div>

<div class="row mb-3">
    <div class="col-md-12">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-list"></i> List View
        </a>
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus"></i> New Appointment
        </a>
    </div>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle"></i> No scheduled appointments found.
    </div>
}
else
{
    @foreach (var dateGroup in groupedByDate)
    {
        <div class="card mb-4">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">
                    <i class="fas fa-calendar-day"></i>
                    @dateGroup.Key.ToString("dddd, MMMM dd, yyyy")
                    <span class="badge bg-light text-dark float-end">@dateGroup.Count() appointments</span>
                </h4>
            </div>
            <div class="card-body">
                <div class="row">
                    @foreach (var appointment in dateGroup.OrderBy(a => a.AppointmentTime))
                    {
                        <div class="col-md-6 col-lg-4 mb-3">
                            <div class="card h-100 border-start border-4 @GetBorderClass(appointment.Status)">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <h5 class="card-title mb-0">
                                            <i class="fas fa-clock text-primary"></i>
                                            @appointment.AppointmentTime.ToString(@"hh\:mm")
                                        </h5>
                                        @switch (appointment.Status)
                                        {
                                            case "Scheduled":
                                                <span class="badge bg-primary">Scheduled</span>
                                                break;
                                            case "Completed":
                                                <span class="badge bg-success">Completed</span>
                                                break;
                                            case "Cancelled":
                                                <span class="badge bg-danger">Cancelled</span>
                                                break;
                                            case "NoShow":
                                                <span class="badge bg-warning">No Show</span>
                                                break;
                                        }
                                    </div>
                                    
                                    <hr />
                                    
                                    <p class="mb-2">
                                        <i class="fas fa-user-injured text-info"></i>
                                        <strong>Patient:</strong><br/>
                                        <span class="ms-3">@appointment.Patient?.PatientName</span>
                                    </p>
                                    
                                    <p class="mb-2">
                                        <i class="fas fa-user-md text-success"></i>
                                        <strong>Doctor:</strong><br/>
                                        <span class="ms-3">@appointment.Doctor?.DoctorName</span>
                                    </p>
                                    
                                    <p class="mb-2">
                                        <i class="fas fa-notes-medical text-warning"></i>
                                        <strong>Reason:</strong><br/>
                                        <span class="ms-3 text-muted">
                                            @(appointment.Reason.Length > 50 ? appointment.Reason.Substring(0, 50) + "..." : appointment.Reason)
                                        </span>
                                    </p>
                                    
                                    <div class="mt-3">
                                        <a asp-action="Details" asp-route-id="@appointment.Id" class="btn btn-sm btn-info">
                                            <i class="fas fa-eye"></i> Details
                                        </a>
                                        
                                        @if (appointment.Status == "Scheduled")
                                        {
                                            <a asp-action="Edit" asp-route-id="@appointment.Id" class="btn btn-sm btn-primary">
                                                <i class="fas fa-edit"></i> Edit
                                            </a>
                                            
                                            @if (Context.Session.GetString("UserType") == "Doctor" || Context.Session.GetString("UserType") == "Admin")
                                            {
                                                <form asp-action="Complete" asp-route-id="@appointment.Id" method="post" style="display: inline;">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn btn-sm btn-success" title="Complete">
                                                        <i class="fas fa-check"></i>
                                                    </button>
                                                </form>
                                            }
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    }
}

@functions {
    string GetBorderClass(string status)
    {
        return status switch
        {
            "Scheduled" => "border-primary",
            "Completed" => "border-success",
            "Cancelled" => "border-danger",
            "NoShow" => "border-warning",
            _ => "border-secondary"
        };
    }
}

<style>
    .border-start {
        border-left-width: 4px !important;
    }
    
    .card {
        transition: transform 0.2s, box-shadow 0.2s;
    }
    
    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }
</style>
