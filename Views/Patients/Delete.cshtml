@model ClinicManagementSystem.Models.Patient

@{
    ViewData["Title"] = "Delete Patient";
}

<div class="row mb-3">
    <div class="col-md-12">
        <h2 class="text-danger"><i class="fas fa-exclamation-triangle"></i> Delete Patient</h2>
        <hr />
    </div>
</div>

<div class="alert alert-danger">
    <h4><i class="fas fa-exclamation-circle"></i> Warning!</h4>
    <p>Are you sure you want to delete this patient? This action cannot be undone.</p>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <i class="fas fa-user-injured"></i> Patient Information
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Name</dt>
                    <dd class="col-sm-8"><strong>@Model.PatientName</strong></dd>

                    <dt class="col-sm-4">Civil ID</dt>
                    <dd class="col-sm-8">@Model.PatientCivilID</dd>

                    <dt class="col-sm-4">Phone 1</dt>
                    <dd class="col-sm-8">@Model.PatientTel1</dd>

                    <dt class="col-sm-4">Phone 2</dt>
                    <dd class="col-sm-8">@Model.PatientTel2</dd>

                    <dt class="col-sm-4">Address</dt>
                    <dd class="col-sm-8">@Model.PatientAddress</dd>

                    <dt class="col-sm-4">Doctor</dt>
                    <dd class="col-sm-8">@Model.Doctor?.DoctorName</dd>
                </dl>
            </div>
        </div>

        <form asp-action="Delete" class="mt-3">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash"></i> Yes, Delete Patient
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-times"></i> No, Cancel
            </a>
        </form>
    </div>
</div>
