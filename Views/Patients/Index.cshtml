@model IEnumerable<ClinicManagementSystem.Models.Patient>
@{
    ViewData["Title"] = "Patient";
}
<div class="row mb-3">
    <div class="col"><h2><i class="fas fa-procedures"></i> @ViewData["Title"]</h2></div>
    <div class="col text-end">
        <a asp-action="Create" class="btn btn-success"><i class="fas fa-plus"></i> New Patient</a>
    </div>
</div>

<!-- Search Form -->
<div class="card mb-3">
    <div class="card-body">
        <form asp-action="Index" method="get" class="row g-3">
            <div class="col-md-4">
                <label class="form-label">Patient Name</label>
                <input type="text" name="searchName" class="form-control" value="@ViewBag.SearchName" placeholder="Search By Name..." />
            </div>
            <div class="col-md-3">
                <label class="form-label">Civil ID</label>
                <input type="text" name="searchCivilID" class="form-control" value="@ViewBag.SearchCivilID" placeholder="Search By Civil ID..." />
            </div>
            <div class="col-md-3">
                <label class="form-label">Phone No.</label>
                <input type="text" name="searchTel" class="form-control" value="@ViewBag.SearchTel" placeholder="Search By Phone Number..." />
            </div>
            <div class="col-md-2 d-flex align-items-end">
                <button type="submit" class="btn btn-primary me-2"><i class="fas fa-search"></i> Search</button>
                <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-redo"></i> Reset</a>
            </div>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-primary">
                    <tr>
                        <th>م</th>
                        <th>@Html.DisplayNameFor(model => model.PatientName)</th>
                        <th>@Html.DisplayNameFor(model => model.PatientCivilID)</th>
                        <th>@Html.DisplayNameFor(model => model.BirthDate)</th>
                        <th>Age</th>
                        <th>@Html.DisplayNameFor(model => model.PatientTel1)</th>
                        <th>@Html.DisplayNameFor(model => model.Doctor)</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int counter = 1;
                    }
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@counter</td>
                            <td>@Html.DisplayFor(modelItem => item.PatientName)</td>
                            <td>@Html.DisplayFor(modelItem => item.PatientCivilID)</td>
                            <td>@(item.BirthDate?.ToString("yyyy-MM-dd") ?? "-")</td>
                            <td>
                                @if (item.Age.HasValue)
                                {
                                    <span class="badge bg-info">@item.Age سنة</span>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td>@Html.DisplayFor(modelItem => item.PatientTel1)</td>
                            <td>@(item.Doctor?.DoctorName ?? "Undefine")</td>
                            <td>
                                <div class="btn-group-actions">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info" title="Details"><i class="fas fa-eye"></i></a>
                                    <a asp-controller="PatientDiagnoses" asp-action="Create" asp-route-patientId="@item.Id" class="btn btn-sm btn-primary" title="Add Diagnosis"><i class="fas fa-stethoscope"></i></a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning" title="Edit"><i class="fas fa-edit"></i></a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Delete"><i class="fas fa-trash"></i></a>
                                </div>
                            </td>
                        </tr>
                        counter++;
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
