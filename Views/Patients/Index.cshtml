@model IEnumerable<ClinicManagementSystem.Models.Patient>
@{
    ViewData["Title"] = "المرضى";
}
<div class="row mb-3">
    <div class="col"><h2><i class="fas fa-procedures"></i> @ViewData["Title"]</h2></div>
    <div class="col text-end">
        <a asp-action="Create" class="btn btn-success"><i class="fas fa-plus"></i> إضافة مريض جديد</a>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-primary">
                    <tr>
                        <th>م</th>
                        <th>@Html.DisplayNameFor(model => model.PatientName)</th>
                        <th>@Html.DisplayNameFor(model => model.PatientCivilID)</th>
                        <th>@Html.DisplayNameFor(model => model.PatientTel1)</th>
                        <th>@Html.DisplayNameFor(model => model.Doctor)</th>
                        <th>الإجراءات</th>
                    </tr>
                </thead>
                <tbody>
                    @{ int counter = 1; }
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@counter</td>
                            <td>@Html.DisplayFor(modelItem => item.PatientName)</td>
                            <td>@Html.DisplayFor(modelItem => item.PatientCivilID)</td>
                            <td>@Html.DisplayFor(modelItem => item.PatientTel1)</td>
                            <td>@(item.Doctor?.DoctorName ?? "غير محدد")</td>
                            <td>
                                <div class="btn-group-actions">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info"><i class="fas fa-eye"></i></a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning"><i class="fas fa-edit"></i></a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i></a>
                                </div>
                            </td>
                        </tr>
                        counter++;
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
