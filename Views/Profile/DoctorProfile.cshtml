@model ClinicManagementSystem.Models.DoctorInfo

@{
    ViewData["Title"] = "My Profile";
}

<div class="row">
    <div class="col-md-12">
        <h2><i class="fas fa-user-md"></i> My Profile</h2>
        <hr />
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body text-center">
                @if (Model.DoctorPicture != null)
                {
                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.DoctorPicture)" 
                         class="img-thumbnail rounded-circle" style="max-width: 200px;" alt="Doctor Photo" />
                }
                else
                {
                    <i class="fas fa-user-circle fa-10x text-muted"></i>
                }
                <h4 class="mt-3">@Model.DoctorName</h4>
                <p class="text-muted">@Model.DoctorTitle</p>
            </div>
        </div>
    </div>

    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-success text-white">
                <i class="fas fa-info-circle"></i> Profile Information
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Specialist</dt>
                    <dd class="col-sm-8">@Model.Specialist?.SpecialistName</dd>

                    <dt class="col-sm-4">Civil ID</dt>
                    <dd class="col-sm-8">@Model.DoctorCivilId</dd>

                    <dt class="col-sm-4">Gender</dt>
                    <dd class="col-sm-8">@Model.Gender</dd>

                    <dt class="col-sm-4">Phone 1</dt>
                    <dd class="col-sm-8">@Model.DoctorTel1</dd>

                    <dt class="col-sm-4">Phone 2</dt>
                    <dd class="col-sm-8">@Model.DoctorTel2</dd>

                    <dt class="col-sm-4">Address</dt>
                    <dd class="col-sm-8">@Model.DoctorAddress</dd>

                    <dt class="col-sm-4">Login Username</dt>
                    <dd class="col-sm-8">@Model.LoginUsername</dd>

                    <dt class="col-sm-4">Status</dt>
                    <dd class="col-sm-8">
                        @if (Model.Active)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Inactive</span>
                        }
                    </dd>
                </dl>

                <div class="mt-4">
                    <a asp-action="EditDoctor" class="btn btn-primary">
                        <i class="fas fa-edit"></i> Edit Profile
                    </a>
                    <a asp-action="ChangePassword" class="btn btn-warning">
                        <i class="fas fa-key"></i> Change Password
                    </a>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to Dashboard
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
