@model ClinicManagementSystem.Models.UserInfo

@{
    ViewData["Title"] = "My Profile";
}

<div class="row">
    <div class="col-md-12">
        <h2><i class="fas fa-user-circle"></i> My Profile</h2>
        <hr />
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <i class="fas fa-info-circle"></i> Profile Information
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Username</dt>
                    <dd class="col-sm-8">@Model.UserName</dd>

                    <dt class="col-sm-4">Full Name</dt>
                    <dd class="col-sm-8">@Model.UserFullName</dd>

                    <dt class="col-sm-4">Job Title</dt>
                    <dd class="col-sm-8">@Model.JobTitle</dd>

                    <dt class="col-sm-4">Phone</dt>
                    <dd class="col-sm-8">@Model.UserTel</dd>

                    <dt class="col-sm-4">Role</dt>
                    <dd class="col-sm-8">
                        <span class="badge bg-primary">@Model.Role?.RoleName</span>
                    </dd>

                    <dt class="col-sm-4">Status</dt>
                    <dd class="col-sm-8">
                        @if (Model.Active)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Inactive</span>
                        }
                    </dd>
                </dl>

                <div class="mt-4">
                    <a asp-action="EditAdmin" class="btn btn-primary">
                        <i class="fas fa-edit"></i> Edit Profile
                    </a>
                    <a asp-action="ChangePassword" class="btn btn-warning">
                        <i class="fas fa-key"></i> Change Password
                    </a>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to Dashboard
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
