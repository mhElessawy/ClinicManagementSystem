@model ClinicManagementSystem.Models.UserInfo
@{
    ViewData["Title"] = "تفاصيل المستخدم";
}
<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card">
            <div class="card-header bg-info text-white">
                <h4 class="mb-0"><i class="fas fa-info-circle"></i> @ViewData["Title"]</h4>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.UserName)</dt>
                    <dd class="col-sm-8"><strong>@Html.DisplayFor(model => model.UserName)</strong></dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.UserFullName)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.UserFullName)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.JobTitle)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.JobTitle)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.UserTel)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.UserTel)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Active)</dt>
                    <dd class="col-sm-8">
                        @if (Model.Active)
                        {
                            <span class="badge bg-success">نشط</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">غير نشط</span>
                        }
                    </dd>
                </dl>

                <hr />
                <h5 class="mt-3"><i class="fas fa-user-md"></i> الأطباء المرتبطين بهذا المستخدم:</h5>
                @if (Model.Doctors.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-sm table-bordered">
                            <thead class="table-light">
                                <tr>
                                    <th>الاسم</th>
                                    <th>التخصص</th>
                                    <th>الحالة</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var doctor in Model.Doctors)
                                {
                                    <tr>
                                        <td>@doctor.DoctorName</td>
                                        <td>@(doctor.Specialist?.SpecialistName ?? "غير محدد")</td>
                                        <td>
                                            @if (doctor.Active)
                                            {
                                                <span class="badge bg-success">نشط</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">غير نشط</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-muted">لا يوجد أطباء مرتبطين</p>
                }

                <div class="mt-4">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning"><i class="fas fa-edit"></i> تعديل</a>
                    <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> رجوع للقائمة</a>
                </div>
            </div>
        </div>
    </div>
</div>
