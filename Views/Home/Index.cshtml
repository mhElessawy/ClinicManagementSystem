@{
    ViewData["Title"] = "Dashboard";
}

<div class="row mb-4">
    <div class="col-12">
        <h2><i class="fas fa-tachometer-alt"></i> Dashboard</h2>
        <p class="text-muted">Welcome back, @ViewBag.UserName! (@ViewBag.UserType)</p>
    </div>
</div>

@if (ViewBag.UserType == "Doctor")
{
    var subscription = ViewBag.CurrentSubscription as ClinicManagementSystem.Models.DoctorSubscription;

    if (subscription != null)
    {
        var remainingDays = subscription.RemainingDays;
        var isExpiringSoon = remainingDays <= 7;

        <div class="row mb-3">
            <div class="col-12">
                <div class="card @(isExpiringSoon ? "border-warning" : "border-success")">
                    <div class="card-header @(isExpiringSoon ? "bg-warning text-dark" : "bg-success text-white")">
                        <h5 class="mb-0">
                            <i class="fas fa-calendar-check"></i> Subscription Status
                            @if (isExpiringSoon)
                            {
                                <span class="badge bg-danger float-end">
                                    <i class="fas fa-exclamation-triangle"></i> Expiring Soon
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-light text-success float-end">
                                    <i class="fas fa-check-circle"></i> Active
                                </span>
                            }
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-3">
                                <p class="mb-2">
                                    <strong><i class="fas fa-tag"></i> Type:</strong><br>
                                    <span class="badge bg-info">@subscription.SubscriptionType</span>
                                </p>
                            </div>
                            <div class="col-md-3">
                                <p class="mb-2">
                                    <strong><i class="fas fa-calendar-alt"></i> Start Date:</strong><br>
                                    <span class="text-muted">@subscription.StartDate.ToString("dd MMM yyyy")</span>
                                </p>
                            </div>
                            <div class="col-md-3">
                                <p class="mb-2">
                                    <strong><i class="fas fa-calendar-times"></i> End Date:</strong><br>
                                    <span class="@(isExpiringSoon ? "text-danger fw-bold" : "text-success fw-bold")">
                                        @subscription.EndDate.ToString("dd MMM yyyy")
                                    </span>
                                </p>
                            </div>
                            <div class="col-md-3">
                                <p class="mb-2">
                                    <strong><i class="fas fa-hourglass-half"></i> Remaining Days:</strong><br>
                                    <span class="@(isExpiringSoon ? "text-danger fw-bold" : "text-success fw-bold")">
                                        @remainingDays days
                                    </span>
                                </p>
                            </div>
                        </div>
                        @if (isExpiringSoon)
                        {
                            <div class="alert alert-warning mt-3 mb-0">
                                <i class="fas fa-exclamation-triangle"></i>
                                <strong>Warning:</strong> Your subscription will expire in @remainingDays days. Please contact administration to renew.
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row mb-3">
            <div class="col-12">
                <div class="alert alert-danger">
                    <i class="fas fa-exclamation-circle"></i>
                    <strong>No Active Subscription:</strong> You do not have an active subscription. Please contact administration.
                </div>
            </div>
        </div>
    }

    <!-- Quick Actions for Doctor -->
    <div class="row mb-3">
        <div class="col-12">
            <div class="card border-primary">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-bolt"></i> Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex gap-2 flex-wrap">
                        <a asp-controller="Locations" asp-action="Index" class="btn btn-outline-primary">
                            <i class="fas fa-map-marker-alt"></i> My Locations
                        </a>
                        <a asp-controller="Appointments" asp-action="Create" class="btn btn-outline-success">
                            <i class="fas fa-calendar-plus"></i> New Appointment
                        </a>
                        <a asp-controller="Patients" asp-action="Create" class="btn btn-outline-info">
                            <i class="fas fa-user-plus"></i> New Patient
                        </a>
                        <a asp-controller="MyAssistants" asp-action="Index" class="btn btn-outline-warning">
                            <i class="fas fa-user-nurse"></i> My Assistants
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<div class="row g-4">
    <div class="col-md-3">
        <div class="card border-primary">
            <div class="card-body text-center">
                <i class="fas fa-stethoscope fa-3x text-primary mb-3"></i>
                <h3 class="card-title">@ViewBag.TotalDoctors</h3>
                <p class="card-text text-muted">Total Doctors</p>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card border-success">
            <div class="card-body text-center">
                <i class="fas fa-procedures fa-3x text-success mb-3"></i>
                <h3 class="card-title">@ViewBag.TotalPatients</h3>
                <p class="card-text text-muted">
                    @if (ViewBag.UserType == "Admin")
                    {
                        <text>Total Patients</text>
                    }
                    else
                    {
                        <text>My Patients</text>
                    }
                </p>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card border-info">
            <div class="card-body text-center">
                <i class="fas fa-notes-medical fa-3x text-info mb-3"></i>
                <h3 class="card-title">@ViewBag.TotalDiagnoses</h3>
                <p class="card-text text-muted">Total Diagnoses</p>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card border-warning">
            <div class="card-body text-center">
                <i class="fas fa-calendar-day fa-3x text-warning mb-3"></i>
                <h3 class="card-title">@ViewBag.TodayDiagnoses</h3>
                <p class="card-text text-muted">Today's Diagnoses</p>
            </div>
        </div>
    </div>
</div>

@if (ViewBag.UserType == "Doctor" || ViewBag.UserType == "Assistant")
{
    var todayAppointments = ViewBag.TodayAppointments as List<ClinicManagementSystem.Models.Appointment>;
    var tomorrowAppointments = ViewBag.TomorrowAppointments as List<ClinicManagementSystem.Models.Appointment>;

    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card border-success">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-calendar-day"></i> Today's Appointments
                        <span class="badge bg-light text-dark float-end">@DateTime.Today.ToString("MMM dd, yyyy")</span>
                    </h5>
                </div>
                <div class="card-body">
                    @if (todayAppointments == null || !todayAppointments.Any())
                    {
                        <div class="alert alert-info mb-0">
                            <i class="fas fa-info-circle"></i> No appointments scheduled for today.
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-sm table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th style="width: 80px;">Time</th>
                                        <th>Patient</th>
                                        <th>Reason</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var appointment in todayAppointments)
                                    {
                                        <tr>
                                            <td>
                                                <span class="badge bg-primary">
                                                    <i class="fas fa-clock"></i> @appointment.AppointmentTime.ToString(@"hh\:mm")
                                                </span>
                                            </td>
                                            <td>
                                                <i class="fas fa-user-injured text-info"></i>
                                                <strong>@appointment.Patient?.PatientName</strong>
                                            </td>
                                            <td>
                                                <small class="text-muted">
                                                    @(appointment.Reason.Length > 40 ? appointment.Reason.Substring(0, 40) + "..." : appointment.Reason)
                                                </small>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="mt-2 text-end">
                            <a asp-controller="Appointments" asp-action="Index" class="btn btn-sm btn-outline-success">
                                <i class="fas fa-calendar-alt"></i> View All Appointments
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card border-info">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-calendar-plus"></i> Tomorrow's Appointments
                        <span class="badge bg-light text-dark float-end">@DateTime.Today.AddDays(1).ToString("MMM dd, yyyy")</span>
                    </h5>
                </div>
                <div class="card-body">
                    @if (tomorrowAppointments == null || !tomorrowAppointments.Any())
                    {
                        <div class="alert alert-info mb-0">
                            <i class="fas fa-info-circle"></i> No appointments scheduled for tomorrow.
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-sm table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th style="width: 80px;">Time</th>
                                        <th>Patient</th>
                                        <th>Reason</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var appointment in tomorrowAppointments)
                                    {
                                        <tr>
                                            <td>
                                                <span class="badge bg-primary">
                                                    <i class="fas fa-clock"></i> @appointment.AppointmentTime.ToString(@"hh\:mm")
                                                </span>
                                            </td>
                                            <td>
                                                <i class="fas fa-user-injured text-info"></i>
                                                <strong>@appointment.Patient?.PatientName</strong>
                                            </td>
                                            <td>
                                                <small class="text-muted">
                                                    @(appointment.Reason.Length > 40 ? appointment.Reason.Substring(0, 40) + "..." : appointment.Reason)
                                                </small>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="mt-2 text-end">
                            <a asp-controller="Appointments" asp-action="Create" class="btn btn-sm btn-outline-info">
                                <i class="fas fa-plus"></i> Add New Appointment
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
}

<div class="row mt-5">
    <div class="col-12">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="fas fa-info-circle"></i> System Information</h5>
            </div>
            <div class="card-body">
                <p><strong>User Type:</strong> @ViewBag.UserType</p>
                <p><strong>Date:</strong> @DateTime.Now.ToString("dddd, MMMM dd, yyyy")</p>
                <p><strong>Time:</strong> @DateTime.Now.ToString("hh:mm tt")</p>
            </div>
        </div>
    </div>
</div>
