@{
    ViewData["Title"] = "Dashboard";
}

<div class="row mb-4">
    <div class="col-12">
        <h2><i class="fas fa-tachometer-alt"></i> Dashboard</h2>
        <p class="text-muted">Welcome back, @ViewBag.UserName! (@ViewBag.UserType)</p>
    </div>
</div>

<div class="row g-4">
    <div class="col-md-3">
        <div class="card border-primary">
            <div class="card-body text-center">
                <i class="fas fa-stethoscope fa-3x text-primary mb-3"></i>
                <h3 class="card-title">@ViewBag.TotalDoctors</h3>
                <p class="card-text text-muted">Total Doctors</p>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card border-success">
            <div class="card-body text-center">
                <i class="fas fa-procedures fa-3x text-success mb-3"></i>
                <h3 class="card-title">@ViewBag.TotalPatients</h3>
                <p class="card-text text-muted">
                    @if (ViewBag.UserType == "Admin")
                    {
                        <text>Total Patients</text>
                    }
                    else
                    {
                        <text>My Patients</text>
                    }
                </p>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card border-info">
            <div class="card-body text-center">
                <i class="fas fa-notes-medical fa-3x text-info mb-3"></i>
                <h3 class="card-title">@ViewBag.TotalDiagnoses</h3>
                <p class="card-text text-muted">Total Diagnoses</p>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card border-warning">
            <div class="card-body text-center">
                <i class="fas fa-calendar-day fa-3x text-warning mb-3"></i>
                <h3 class="card-title">@ViewBag.TodayDiagnoses</h3>
                <p class="card-text text-muted">Today's Diagnoses</p>
            </div>
        </div>
    </div>
</div>

@if (ViewBag.UserType == "Doctor" || ViewBag.UserType == "Assistant")
{
    var todayAppointments = ViewBag.TodayAppointments as List<ClinicManagementSystem.Models.Appointment>;
    var tomorrowAppointments = ViewBag.TomorrowAppointments as List<ClinicManagementSystem.Models.Appointment>;
    
    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card border-success">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-calendar-day"></i> Today's Appointments
                        <span class="badge bg-light text-dark float-end">@DateTime.Today.ToString("MMM dd, yyyy")</span>
                    </h5>
                </div>
                <div class="card-body">
                    @if (todayAppointments == null || !todayAppointments.Any())
                    {
                        <div class="alert alert-info mb-0">
                            <i class="fas fa-info-circle"></i> No appointments scheduled for today.
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-sm table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th style="width: 80px;">Time</th>
                                        <th>Patient</th>
                                        <th>Reason</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var appointment in todayAppointments)
                                    {
                                        <tr>
                                            <td>
                                                <span class="badge bg-primary">
                                                    <i class="fas fa-clock"></i> @appointment.AppointmentTime.ToString(@"hh\:mm")
                                                </span>
                                            </td>
                                            <td>
                                                <i class="fas fa-user-injured text-info"></i>
                                                <strong>@appointment.Patient?.PatientName</strong>
                                            </td>
                                            <td>
                                                <small class="text-muted">
                                                    @(appointment.Reason.Length > 40 ? appointment.Reason.Substring(0, 40) + "..." : appointment.Reason)
                                                </small>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="mt-2 text-end">
                            <a asp-controller="Appointments" asp-action="Index" class="btn btn-sm btn-outline-success">
                                <i class="fas fa-calendar-alt"></i> View All Appointments
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card border-info">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-calendar-plus"></i> Tomorrow's Appointments
                        <span class="badge bg-light text-dark float-end">@DateTime.Today.AddDays(1).ToString("MMM dd, yyyy")</span>
                    </h5>
                </div>
                <div class="card-body">
                    @if (tomorrowAppointments == null || !tomorrowAppointments.Any())
                    {
                        <div class="alert alert-info mb-0">
                            <i class="fas fa-info-circle"></i> No appointments scheduled for tomorrow.
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-sm table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th style="width: 80px;">Time</th>
                                        <th>Patient</th>
                                        <th>Reason</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var appointment in tomorrowAppointments)
                                    {
                                        <tr>
                                            <td>
                                                <span class="badge bg-primary">
                                                    <i class="fas fa-clock"></i> @appointment.AppointmentTime.ToString(@"hh\:mm")
                                                </span>
                                            </td>
                                            <td>
                                                <i class="fas fa-user-injured text-info"></i>
                                                <strong>@appointment.Patient?.PatientName</strong>
                                            </td>
                                            <td>
                                                <small class="text-muted">
                                                    @(appointment.Reason.Length > 40 ? appointment.Reason.Substring(0, 40) + "..." : appointment.Reason)
                                                </small>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="mt-2 text-end">
                            <a asp-controller="Appointments" asp-action="Create" class="btn btn-sm btn-outline-info">
                                <i class="fas fa-plus"></i> Add New Appointment
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
}

<div class="row mt-5">
    <div class="col-12">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="fas fa-info-circle"></i> System Information</h5>
            </div>
            <div class="card-body">
                <p><strong>User Type:</strong> @ViewBag.UserType</p>
                <p><strong>Date:</strong> @DateTime.Now.ToString("dddd, MMMM dd, yyyy")</p>
                <p><strong>Time:</strong> @DateTime.Now.ToString("hh:mm tt")</p>
            </div>
        </div>
    </div>
</div>
