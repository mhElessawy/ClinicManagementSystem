@model ClinicManagementSystem.Models.DoctorAssist

@{
    ViewData["Title"] = "Delete Assistant";
}

<div class="row">
    <div class="col-md-12">
        <h2><i class="fas fa-user-nurse text-danger"></i> Delete Assistant</h2>
        <hr />
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="alert alert-danger">
            <h4><i class="fas fa-exclamation-triangle"></i> Are you sure you want to delete this assistant?</h4>
            <p>This action cannot be undone.</p>
        </div>

        <div class="card mb-3">
            <div class="card-header bg-danger text-white">
                <i class="fas fa-info-circle"></i> Assistant Details
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Name</dt>
                    <dd class="col-sm-8">@Model.AssistName</dd>

                    <dt class="col-sm-4">Phone 1</dt>
                    <dd class="col-sm-8">@(Model.AssistTel1 ?? "-")</dd>

                    <dt class="col-sm-4">Phone 2</dt>
                    <dd class="col-sm-8">@(Model.AssistTel2 ?? "-")</dd>

                    <dt class="col-sm-4">Address</dt>
                    <dd class="col-sm-8">@(Model.AssistAddress ?? "-")</dd>

                    <dt class="col-sm-4">Username</dt>
                    <dd class="col-sm-8">@(Model.LoginUsername ?? "-")</dd>

                    <dt class="col-sm-4">Can Login</dt>
                    <dd class="col-sm-8">
                        @if (Model.CanLogin)
                        {
                            <span class="badge bg-success">Yes</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">No</span>
                        }
                    </dd>

                    <dt class="col-sm-4">Status</dt>
                    <dd class="col-sm-8">
                        @if (Model.Active)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Inactive</span>
                        }
                    </dd>
                </dl>
            </div>
        </div>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash"></i> Delete
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-times"></i> Cancel
            </a>
        </form>
    </div>
</div>
