@model IEnumerable<ClinicManagementSystem.Models.DoctorAssist>

@{
    ViewData["Title"] = "My Assistants";
}

<div class="row mb-3">
    <div class="col-md-12">
        <h2><i class="fas fa-user-nurse"></i> My Assistants</h2>
        <p class="text-muted">Manage your assistant team</p>
        <hr />
    </div>
</div>

<div class="row mb-3">
    <div class="col-md-12">
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus"></i> Add New Assistant
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                @if (!Model.Any())
                {
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i> You don't have any assistants yet. Click "Add New Assistant" to create one.
                    </div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-primary">
                                <tr>
                                    <th>Name</th>
                                    <th>Phone 1</th>
                                    <th>Phone 2</th>
                                    <th>Login Username</th>
                                    <th>Can Login</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <i class="fas fa-user-nurse text-info"></i>
                                            @item.AssistName
                                        </td>
                                        <td>@item.AssistTel1</td>
                                        <td>@item.AssistTel2</td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(item.LoginUsername))
                                            {
                                                <span class="badge bg-info">@item.LoginUsername</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td>
                                            @if (item.CanLogin)
                                            {
                                                <span class="badge bg-success">Yes</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">No</span>
                                            }
                                        </td>
                                        <td>
                                            @if (item.Active)
                                            {
                                                <span class="badge bg-success">Active</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">Inactive</span>
                                            }
                                        </td>
                                        <td>
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary" title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Delete">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
