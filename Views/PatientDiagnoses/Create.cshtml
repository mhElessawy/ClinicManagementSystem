@model ClinicManagementSystem.Models.PatientDiagnosis
@{
    ViewData["Title"] = "إضافة تشخيص جديد";
}

<!-- Select2 CSS -->
<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css" rel="stylesheet" />

<div class="row">
    <div class="col-md-10 offset-md-1">
        <div class="card">
            <div class="card-header bg-success text-white">
                <h4 class="mb-0"><i class="fas fa-plus"></i> @ViewData["Title"]</h4>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="AppointmentId" />
                    <div asp-validation-summary="All" class="alert alert-danger"></div>

                    @if (Model.PatientId > 0)
                    {
                        var selectedPatient = (ViewBag.PatientId as SelectList)?.FirstOrDefault(p => p.Value == Model.PatientId.ToString());
                        <div class="alert alert-info">
                            <i class="fas fa-user"></i> <strong>المريض المحدد:</strong> @selectedPatient?.Text
                        </div>
                    }

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="PatientId" class="form-label"></label>
                                <select asp-for="PatientId" asp-items="ViewBag.PatientId" class="form-control" id="patientSelect">
                                    <option value="">-- اختر المريض --</option>
                                </select>
                                <span asp-validation-for="PatientId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="DoctorId" class="form-label"></label>
                                <select asp-for="DoctorId" asp-items="ViewBag.DoctorId" class="form-control">
                                    <option value="">-- اختر الطبيب --</option>
                                </select>
                                <span asp-validation-for="DoctorId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Patient Info Display -->
                    <div id="patientInfoCard" class="alert alert-info" style="display:none;">
                        <h6><i class="fas fa-user-circle"></i> معلومات المريض:</h6>
                        <div class="row">
                            <div class="col-md-6">
                                <strong>الرقم المدني:</strong> <span id="patientCivilId">-</span>
                            </div>
                            <div class="col-md-6">
                                <strong>هاتف 1:</strong> <span id="patientTel1">-</span>
                            </div>
                        </div>
                    </div>

                    @{
                        var intake = ViewBag.Intake as ClinicManagementSystem.Models.AppointmentIntake;
                        var appointment = ViewBag.Appointment as ClinicManagementSystem.Models.Appointment;
                    }

                    @if (intake != null)
                    {
                        <div class="card mb-4 border-warning">
                            <div class="card-header bg-warning text-dark">
                                <h5 class="mb-0">
                                    <i class="fas fa-clipboard-list"></i>
                                    ملاحظات المساعد (Intake Notes)
                                    <small class="float-end">
                                        Performed by: @intake.PerformedByName at @intake.IntakeDate.ToString("HH:mm")
                                    </small>
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <!-- Vital Signs -->
                                    <div class="col-md-6">
                                        <h6 class="text-success"><i class="fas fa-heartbeat"></i> Vital Signs</h6>
                                        <table class="table table-sm table-bordered">
                                            <tr>
                                                <th style="width:50%">Blood Pressure</th>
                                                <td>@(intake.BloodPressure ?? "-")</td>
                                            </tr>
                                            <tr>
                                                <th>Heart Rate</th>
                                                <td>@(intake.HeartRate.HasValue ? $"{intake.HeartRate} bpm" : "-")</td>
                                            </tr>
                                            <tr>
                                                <th>Temperature</th>
                                                <td>@(intake.Temperature.HasValue ? $"{intake.Temperature} C" : "-")</td>
                                            </tr>
                                            <tr>
                                                <th>Weight</th>
                                                <td>@(intake.Weight.HasValue ? $"{intake.Weight} kg" : "-")</td>
                                            </tr>
                                            <tr>
                                                <th>Height</th>
                                                <td>@(intake.Height.HasValue ? $"{intake.Height} cm" : "-")</td>
                                            </tr>
                                        </table>
                                    </div>
                                    <!-- Symptoms -->
                                    <div class="col-md-6">
                                        <h6 class="text-warning"><i class="fas fa-notes-medical"></i> Current Symptoms</h6>
                                        <table class="table table-sm table-bordered">
                                            <tr>
                                                <th style="width:40%">Chief Complaint</th>
                                                <td>@(intake.ChiefComplaint ?? "-")</td>
                                            </tr>
                                            <tr>
                                                <th>Symptoms</th>
                                                <td>@(intake.CurrentSymptoms ?? "-")</td>
                                            </tr>
                                            <tr>
                                                <th>Duration</th>
                                                <td>@(intake.SymptomDuration ?? "-")</td>
                                            </tr>
                                            <tr>
                                                <th>Pain Level</th>
                                                <td>
                                                    @if (intake.PainLevel.HasValue)
                                                    {
                                                        <span class="badge @(intake.PainLevel <= 3 ? "bg-success" : intake.PainLevel <= 6 ? "bg-warning text-dark" : "bg-danger")">
                                                            @intake.PainLevel / 10
                                                        </span>
                                                    }
                                                    else
                                                    {
                                                        <text>-</text>
                                                    }
                                                </td>
                                            </tr>
                                        </table>
                                    </div>
                                </div>
                                <div class="row mt-2">
                                    <div class="col-md-4">
                                        <h6><i class="fas fa-pills"></i> Current Medications</h6>
                                        <p class="border p-2 rounded">@(intake.CurrentMedications ?? "None reported")</p>
                                    </div>
                                    <div class="col-md-4">
                                        <h6 class="text-danger"><i class="fas fa-allergies"></i> Allergies</h6>
                                        <p class="border p-2 rounded @(!string.IsNullOrEmpty(intake.Allergies) ? "border-danger text-danger" : "")">
                                            @(intake.Allergies ?? "None reported")
                                        </p>
                                    </div>
                                    <div class="col-md-4">
                                        <h6><i class="fas fa-history"></i> Previous Conditions</h6>
                                        <p class="border p-2 rounded">@(intake.PreviousConditions ?? "None reported")</p>
                                    </div>
                                </div>
                                @if (!string.IsNullOrEmpty(intake.AdditionalNotes))
                                {
                                    <div class="alert alert-info mt-3">
                                        <h6><i class="fas fa-sticky-note"></i> Additional Notes from Assistant</h6>
                                        <p class="mb-0">@intake.AdditionalNotes</p>
                                    </div>
                                }
                            </div>
                        </div>
                    }

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="DiagnosisDate" class="form-label"></label>
                                <input asp-for="DiagnosisDate" type="date" class="form-control" />
                                <span asp-validation-for="DiagnosisDate" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Active" class="form-label"></label>
                                <div class="form-check form-switch">
                                    <input asp-for="Active" class="form-check-input" type="checkbox" />
                                    <label class="form-check-label" asp-for="Active"></label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="DiagnosisDetails" class="form-label"></label>
                        <textarea asp-for="DiagnosisDetails" class="form-control" rows="5"></textarea>
                        <span asp-validation-for="DiagnosisDetails" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">ملف التشخيص (PDF أو صورة)</label>
                        <input type="file" name="DiagnosisFileUpload" class="form-control" accept=".pdf,.jpg,.jpeg,.png,.gif,.bmp" />
                        <small class="form-text text-muted">الملفات المدعومة: PDF, JPG, PNG, GIF, BMP</small>
                    </div>

                    <div class="mt-4">
                        <button type="submit" class="btn btn-success"><i class="fas fa-save"></i> حفظ</button>
                        <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> رجوع</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <!-- Select2 JS -->
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <script>
        // Parse patients data from ViewBag
        var patientsData = @Html.Raw(ViewBag.PatientsJson ?? "[]");

        $(document).ready(function() {
            // Initialize Select2 on patient dropdown
            $('#patientSelect').select2({
                theme: 'bootstrap-5',
                placeholder: '-- ابحث عن مريض أو اختر من القائمة --',
                allowClear: true,
                dir: 'rtl',
                language: {
                    noResults: function() {
                        return "لا توجد نتائج";
                    },
                    searching: function() {
                        return "جاري البحث...";
                    },
                    inputTooShort: function() {
                        return "الرجاء إدخال حرف أو أكثر";
                    }
                },
                width: '100%'
            });

            // When patient is selected
            $('#patientSelect').on('change', function() {
                var patientId = $(this).val();

                if (patientId) {
                    // Find patient data
                    var patient = patientsData.find(p => p.id == patientId);

                    if (patient) {
                        // Show patient info card
                        $('#patientInfoCard').show();

                        // Update patient info
                        $('#patientCivilId').text(patient.civilId || 'غير محدد');
                        $('#patientTel1').text(patient.tel1 || 'غير محدد');
                    }
                } else {
                    // Hide patient info card
                    $('#patientInfoCard').hide();
                }
            });

            // Trigger change event on page load if patient is pre-selected
            if ($('#patientSelect').val()) {
                $('#patientSelect').trigger('change');
            }
        });
    </script>
}
