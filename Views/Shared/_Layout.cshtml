<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Clinic Management System</title>
    
    <!-- Bootstrap 5 CSS from CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-primary border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-hospital"></i> Clinic System
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home"></i> Dashboard
                            </a>
                        </li>

                        @{
                            var userType = Context.Session.GetString("UserType");
                        }

                        @if (userType == "Admin")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Departments" asp-action="Index">
                                    <i class="fas fa-building"></i> Departments
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Specialists" asp-action="Index">
                                    <i class="fas fa-user-md"></i> Specialists
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="DoctorInfos" asp-action="Index">
                                    <i class="fas fa-stethoscope"></i> Doctors
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="DoctorAssists" asp-action="Index">
                                    <i class="fas fa-user-nurse"></i> Assistants
                                </a>
                            </li>
                        }

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Patients" asp-action="Index">
                                <i class="fas fa-procedures"></i> Patients
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Appointments" asp-action="Index">
                                <i class="fas fa-calendar-alt"></i> Appointments
                            </a>
                        </li>

                        @if (userType == "Doctor")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="MyAssistants" asp-action="Index">
                                    <i class="fas fa-user-nurse"></i> My Assistants
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="DoctorReports" asp-action="Index">
                                    <i class="fas fa-chart-line"></i> My Reports
                                </a>
                            </li>
                        }

                        @if (userType == "Assistant")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="AssistantReports" asp-action="Index">
                                    <i class="fas fa-chart-bar"></i> My Reports
                                </a>
                            </li>
                        }

                        @if (userType == "Admin" || userType == "Doctor")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="PatientDiagnoses" asp-action="Index">
                                    <i class="fas fa-notes-medical"></i> Diagnoses
                                </a>
                            </li>
                        }

                        @if (userType == "Admin")
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-cog"></i> Administration
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="UserInfos" asp-action="Index">
                                        <i class="fas fa-users"></i> Users
                                    </a></li>
                                    <li><a class="dropdown-item" asp-controller="Reports" asp-action="Index">
                                        <i class="fas fa-chart-bar"></i> Reports
                                    </a></li>
                                </ul>
                            </li>
                        }
                    </ul>

                    <ul class="navbar-nav">
                        @if (userType == "Doctor")
                        {
                            @inject ClinicManagementSystem.Models.ApplicationDbContext _db
                            var doctorId = Context.Session.GetInt32("DoctorId");
                            if (doctorId.HasValue)
                            {
                                var doctor = await _db.DoctorInfos
                                    .Include(d => d.Subscriptions)
                                    .FirstOrDefaultAsync(d => d.Id == doctorId.Value);

                                if (doctor != null)
                                {
                                    var today = DateTime.Today;
                                    var currentSubscription = doctor.Subscriptions?
                                        .Where(s => s.IsActive && s.StartDate <= today && s.EndDate >= today)
                                        .OrderByDescending(s => s.EndDate)
                                        .FirstOrDefault();

                                    if (currentSubscription != null)
                                    {
                                        var remainingDays = currentSubscription.RemainingDays;
                                        if (remainingDays <= 7)
                                        {
                                            <li class="nav-item">
                                                <a class="nav-link text-warning" href="#" title="Subscription expiring soon">
                                                    <i class="fas fa-exclamation-triangle"></i>
                                                    <span class="badge bg-warning text-dark">@remainingDays days left</span>
                                                </a>
                                            </li>
                                        }
                                    }
                                }
                            }
                        }
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-user-circle"></i> @Context.Session.GetString("FullName")
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><span class="dropdown-item-text">
                                    <small class="text-muted">@userType</small>
                                </span></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" asp-controller="Profile" asp-action="Index">
                                    <i class="fas fa-user"></i> My Profile
                                </a></li>
                                <li><a class="dropdown-item" asp-controller="Profile" asp-action="ChangePassword">
                                    <i class="fas fa-key"></i> Change Password
                                </a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" asp-controller="Account" asp-action="Logout">
                                    <i class="fas fa-sign-out-alt"></i> Logout
                                </a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    
    <div class="container">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show">
                <i class="fas fa-check-circle"></i> @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show">
                <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container text-center">
            &copy; 2024 - Clinic Management System - V2.0
        </div>
    </footer>

    <!-- jQuery from CDN -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    
    <!-- Bootstrap 5 JS Bundle from CDN -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Custom JS -->
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
