@model IEnumerable<ClinicManagementSystem.Models.DoctorAssist>
@{
    ViewData["Title"] = "Doctor Assist";
}
<div class="row mb-3">
    <div class="col"><h2><i class="fas fa-user-nurse"></i> @ViewData["Title"]</h2></div>
    <div class="col text-end">
        <a asp-action="Create" class="btn btn-success"><i class="fas fa-plus"></i> Add New Assist</a>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-primary">
                    <tr>
                        <th>م</th>
                        <th>@Html.DisplayNameFor(model => model.AssistName)</th>
                        <th>@Html.DisplayNameFor(model => model.Doctor)</th>
                        <th>@Html.DisplayNameFor(model => model.AssistTel1)</th>
                        <th>@Html.DisplayNameFor(model => model.Active)</th>
                        <th>الإجراءات</th>
                    </tr>
                </thead>
                <tbody>
                    @{ int counter = 1; }
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@counter</td>
                            <td>@Html.DisplayFor(modelItem => item.AssistName)</td>
                            <td>
                                @if (item.Doctor != null)
                                {
                                    <span class="badge bg-info">@item.Doctor.DoctorName</span>
                                }
                            </td>
                            <td>@Html.DisplayFor(modelItem => item.AssistTel1)</td>
                            <td>
                                @if (item.Active)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Not Active</span>
                                }
                            </td>
                            <td>
                                <div class="btn-group-actions">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info"><i class="fas fa-eye"></i></a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning"><i class="fas fa-edit"></i></a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i></a>
                                </div>
                            </td>
                        </tr>
                        counter++;
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
