@model ClinicManagementSystem.Models.DoctorAssist
@{
    ViewData["Title"] = "Assist Details";
}
<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card">
            <div class="card-header bg-info text-white">
                <h4 class="mb-0"><i class="fas fa-info-circle"></i> @ViewData["Title"]</h4>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.AssistName)</dt>
                    <dd class="col-sm-8"><strong>@Html.DisplayFor(model => model.AssistName)</strong></dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Doctor)</dt>
                    <dd class="col-sm-8">
                        @if (Model.Doctor != null)
                        {
                            <span class="badge bg-primary">@Model.Doctor.DoctorName</span>
                        }
                    </dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.AssistTel1)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.AssistTel1)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.AssistTel2)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.AssistTel2)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.AssistAddress)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.AssistAddress)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Active)</dt>
                    <dd class="col-sm-8">
                        @if (Model.Active)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Not Active</span>
                        }
                    </dd>
                </dl>

                <div class="mt-4">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning"><i class="fas fa-edit"></i> تعديل</a>
                    <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> رجوع للقائمة</a>
                </div>
            </div>
        </div>
    </div>
</div>
