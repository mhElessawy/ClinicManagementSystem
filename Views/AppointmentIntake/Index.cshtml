@model IEnumerable<ClinicManagementSystem.Models.Appointment>

@{
    ViewData["Title"] = "Patient Intake";
    var filterDate = (DateTime)ViewBag.FilterDate;
    var doctorName = ViewBag.DoctorName as string;
}

<div class="row mb-3">
    <div class="col-md-12">
        <h2><i class="fas fa-clipboard-list"></i> Patient Intake</h2>
        <p class="text-muted">Manage patient arrivals and pre-visit intake for Dr. @doctorName</p>
        <hr />
    </div>
</div>

<div class="row mb-3">
    <div class="col-md-6">
        <form method="get" class="d-flex gap-2">
            <input type="date" name="date" class="form-control" value="@filterDate.ToString("yyyy-MM-dd")" />
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-filter"></i> Filter
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-calendar-day"></i> Today
            </a>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-header bg-info text-white">
        <i class="fas fa-calendar-check"></i> Appointments for @filterDate.ToString("dddd, yyyy-MM-dd")
    </div>
    <div class="card-body">
        @if (!Model.Any())
        {
            <div class="alert alert-info">
                <i class="fas fa-info-circle"></i> No appointments scheduled for this date.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-primary">
                        <tr>
                            <th>Time</th>
                            <th>Patient</th>
                            <th>Reason</th>
                            <th>Intake Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var appointment in Model)
                        {
                            var hasIntake = appointment.Intake != null;
                            var isReady = appointment.Intake?.ReadyForDoctor == true;

                            <tr class="@(isReady ? "table-success" : hasIntake ? "table-warning" : "")">
                                <td>
                                    <strong>@appointment.AppointmentTime.ToString(@"hh\:mm")</strong>
                                </td>
                                <td>
                                    <i class="fas fa-user-injured text-info"></i>
                                    @appointment.Patient?.PatientName
                                    @if (appointment.Patient?.PatientTel1 != null)
                                    {
                                        <br /><small class="text-muted">@appointment.Patient.PatientTel1</small>
                                    }
                                </td>
                                <td>
                                    <span data-bs-toggle="tooltip" title="@appointment.Reason">
                                        @(appointment.Reason.Length > 40 ? appointment.Reason.Substring(0, 40) + "..." : appointment.Reason)
                                    </span>
                                </td>
                                <td>
                                    @if (isReady)
                                    {
                                        <span class="badge bg-success">
                                            <i class="fas fa-check-circle"></i> Ready for Doctor
                                        </span>
                                        <br />
                                        <small class="text-muted">
                                            Arrived: @appointment.Intake?.ArrivalTime?.ToString("HH:mm")
                                        </small>
                                    }
                                    else if (hasIntake)
                                    {
                                        <span class="badge bg-warning text-dark">
                                            <i class="fas fa-hourglass-half"></i> Intake In Progress
                                        </span>
                                        <br />
                                        <small class="text-muted">
                                            Arrived: @appointment.Intake?.ArrivalTime?.ToString("HH:mm")
                                        </small>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">
                                            <i class="fas fa-clock"></i> Waiting
                                        </span>
                                    }
                                </td>
                                <td>
                                    @if (hasIntake)
                                    {
                                        <a asp-action="Perform" asp-route-id="@appointment.Id" class="btn btn-sm btn-primary" title="Edit Intake">
                                            <i class="fas fa-edit"></i> Edit
                                        </a>
                                        <a asp-action="Details" asp-route-id="@appointment.Intake!.Id" class="btn btn-sm btn-info" title="View Details">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        @if (!isReady)
                                        {
                                            <form asp-action="MarkReady" asp-route-id="@appointment.Intake!.Id" method="post" style="display: inline;">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-sm btn-success" title="Mark Ready for Doctor">
                                                    <i class="fas fa-check"></i> Ready
                                                </button>
                                            </form>
                                        }
                                    }
                                    else
                                    {
                                        <a asp-action="Perform" asp-route-id="@appointment.Id" class="btn btn-sm btn-success" title="Start Intake">
                                            <i class="fas fa-clipboard-check"></i> Start Intake
                                        </a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-12">
        <div class="card bg-light">
            <div class="card-body">
                <h5><i class="fas fa-info-circle"></i> Intake Status Legend</h5>
                <div class="d-flex gap-4">
                    <span><span class="badge bg-secondary">Waiting</span> - Patient has not arrived yet</span>
                    <span><span class="badge bg-warning text-dark">In Progress</span> - Intake started, not ready for doctor</span>
                    <span><span class="badge bg-success">Ready</span> - Patient ready for doctor consultation</span>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        })
    </script>
}
